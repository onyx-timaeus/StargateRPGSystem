
<table class="item-list inventory equip-table">
    <thead>
        <tr class="equip-table-header">
            <th class="bold">Bulk</th>
            <th class="bold">Amount</th>
            <th class="bold equip-name-col">Name</th>
            <th class="bold equip-actions-col">
                <button type="button" class="add-equipment-btn" data-action="addInventory" title="Add to Inventory">
                    <i class="fas fa-plus"></i>
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
        {{#each items.equip as |item|}}
            <tr class="inventory-item item" data-item-id="{{item._id}}">
                <td>{{item.system.bulk}}</td>
                <td>{{item.system.quantity}}</td>
                <td class="equip-name-col">
                    <a class="item-control item-roll"><span class="item-image" style="background-image: url({{item.img}})"></span></a>
                    {{item.name}}
                </td>
                <td class="equip-actions-col">
                    <a class="item-control item-consume" title="Consume"><i class="fas fa-cookie-bite"></i></a>
                    <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
                    <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>