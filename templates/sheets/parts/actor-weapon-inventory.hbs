<table class="item-list inventory weapon-table">
  <thead>
    <tr class="weapon-table-header">
      <th class="bold">Weapon</th>
      <th class="bold">To hit</th>
      <th class="bold">DMG</th>
      <th class="bold">Type</th>
      <th class="bold">Range</th>
      <th class="bold">Ammo</th>
      <th class="bold">Reload</th>
      <th class="bold weapon-special-col">Special</th>
      <th class="bold weapon-actions-col">
        <button type="button" class="add-weapon-btn-header" data-action="addWeapon" title="Add Weapon">
          <i class="fas fa-plus"></i>
        </button>
      </th>
    </tr>
  </thead>

<!-- attacks -->
  <tbody>
    {{#each items.weapon as |item|}}
    <tr class="item inventory-item" data-item-id="{{item._id}}" draggable="true">
      <td>
        <a class="item-control item-roll"><span class="item-image" style="background-image: url({{item.img}})"></span></a>
        {{item.name}}
      </td>
      <td>{{item.calculatedToHit}}</td>
      <td>{{item.system.dmg}}</td>
      <td>{{item.system.details.type}}</td>
      <td>{{item.system.details.range.normal}}/{{item.system.details.range.max}}</td>
      <td>{{item.system.ammo.value}}</td>
      <td>
        {{#if item.hasAmmo}}
          <a class="item-control item-reload" title="Reload magazine"><i class="fas fa-retweet"></i></a>
        {{/if}}
      </td>
      <td class="weapon-special-col">{{item.system.details.special}}</td>
      <td class="weapon-actions-col">
        <a class="item-control item-edit"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete"><i class="fas fa-trash"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>